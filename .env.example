# Django Backend Environment Variables

# SECURITY WARNING: Generate a new SECRET_KEY for production
# Use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com

# Comma-separated list of allowed CORS origins (include your Vercel frontend URL)
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-app.vercel.app

# Database URL (provided automatically by Render when PostgreSQL is added)
# For local development with PostgreSQL: postgresql://user:password@localhost:5432/dbname
# For local development with SQLite: leave empty (defaults to db.sqlite3)
DATABASE_URL=
